<Window x:Class="Unidad_3.ScaleTransform"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unidad_3"
        mc:Ignorable="d"
        Title="ScaleTransform" Height="450" Width="800">
    <UniformGrid Columns="2" Rows="2">
        <Rectangle Stroke="Black" Width="100" Height="50">
            <Rectangle.RenderTransform>
                <ScaleTransform ScaleX="2" ScaleY="2"></ScaleTransform>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Button Content="Uno">
            <Button.RenderTransform>
                <ScaleTransform  ScaleX=".25" ScaleY=".25"></ScaleTransform>
            </Button.RenderTransform>
        </Button>
        <Button Content="Uno" Height="50" Width="100">
            <Button.RenderTransform>
                <ScaleTransform  ScaleX="-1" ScaleY="-1"></ScaleTransform>
            </Button.RenderTransform>
        </Button>
    </UniformGrid>
</Window>
